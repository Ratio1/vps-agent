{
  "name": "vps-fleet-manager",
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  "containerEnv": {
    "AUTO_START_CODEX": "true"
  },

  "remoteUser": "node",
  "postCreateCommand": "bash scripts/bootstrap-unix.sh --skip-install",
  "postStartCommand": "rm -f /tmp/vps-fleet-manager-codex-autostart.* || true",
  "postAttachCommand": "bash scripts/devcontainer-onboarding.sh"
}
